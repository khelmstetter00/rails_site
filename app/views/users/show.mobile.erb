<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h4>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h4>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
		<% if current_user?(@user) %>
			<section style="padding-top: 10px;">
				<%= button_to 'New Post', new_micropost_path, class: "btn btn-large btn-primary", :method => :get %>
			</section>
		<% end %>
		
		<% if signed_in? %>
				<%= render 'follow_form' %>
		<% end %>

		<% if @user.microposts.any? %>
			<h3>Posts (<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts, :page_links => false %>
		<% end %>
		</section>
	</div>
</div>