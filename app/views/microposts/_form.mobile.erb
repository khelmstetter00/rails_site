<div class="row">
	<div class="span4">
		<%= form_for(@micropost) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :title %>
			<%= f.text_field :title %>

			<%= f.label :content %>
			<%= f.text_area :content %>

			<%= f.submit "Post", class: "btn btn-large btn-primary" %>

		<% end %>
	</div>
</div>