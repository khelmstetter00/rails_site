<li>
	<%= comment.content.html_safe %>
	<br/><br/>
	<% commenter = User.find(comment.user_id) %>
	Posted by: <%= link_to commenter.name, user_path(commenter) %> <%= time_ago_in_words(comment.created_at) %> ago.
	<% if current_user?(commenter) %>
		<%= link_to 'Delete', [comment.micropost, comment],
						:confirm => 'Are you sure?',
						:method => :delete %>
	<% end %>
</li>